<LabeledCheckBoxDataGraph>:
    orientation: 'horizontal'
    size_hint: (0.1, 1)
    CheckBox:
        id: checkbox
        on_active: app.root._graph.ids.graph.setMaxPoints(int(label.text), 0) if app.root is not None else None
    Label:
        id: label

<DataGraphPopup>:
    title: "Grafico de temperatura na Saida"
    BoxLayout:
        orientation: 'vertical'
        TimeSeriesGraph:
            id: graph
            xlabel: 'Horário'
            ylabel: 'Temperatura [°C]'
            background_color: 0.5, 0.5, 0.5, 0.5
            x_ticks_minor: 1
            x_ticks_major: 5
            y_ticks_major: 5
            y_grid_label: True
            x_grid_label: True
            padding: 5
            x_grid: True
            y_grid: True
            xmin: 0
            ymin: 0
            ymax: 50
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.05)
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (0.5, 1)
                Label:
                    size_hint: (0.3, 1)
                    text: "Número de pontos do gráfico"
                LabeledCheckBoxDataGraph:
                    id: mp20
                    on_kv_post:
                        self.ids.label.text = '20'
                        self.ids.checkbox.group = 'cb_group'
                        self.ids.checkbox.active = True
                LabeledCheckBoxDataGraph:
                    id: mp50
                    on_kv_post:
                        self.ids.label.text = '50'
                        self.ids.checkbox.group = 'cb_group'
                LabeledCheckBoxDataGraph:
                    id: mp100
                    on_kv_post:
                        self.ids.label.text = '100'
                        self.ids.checkbox.group = 'cb_group'
            Button:
                text: "Fechar"
                size_hint: (0.2, 1)
                on_release: root.dismiss()

<TempPopLabel@Label>:
    text: "-.-"
    halign: 'center'
    color: (0.1,0.1,0.1,1)
    font_size: 16

<HistoricalDataPopup>:
    title: "Consulta de Dados Históricos"
    size_hint: (0.9, 0.9)
    auto_dismiss: False

    BoxLayout:
        orientation: "vertical"
        padding: dp(12)
        spacing: dp(8)

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(32)
            Label:
                text: "Início (DD/MM/AAAA HH:MM:SS):"
                size_hint_x: None
                width: dp(260)
            TextInput:
                id: start_datetime
                multiline: False
                hint_text: "01/08/2025 00:00:00"

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(32)
            Label:
                text: "Fim (DD/MM/AAAA HH:MM:SS):"
                size_hint_x: None
                width: dp(260)
            TextInput:
                id: end_datetime
                multiline: False
                hint_text: "02/08/2025 00:00:00"

        BoxLayout:
            size_hint_y: None
            height: dp(40)
            spacing: dp(10)
            Button:
                text: "Buscar Dados"
                on_release: root.buscar_dados()
            Button:
                text: "Fechar"
                on_release: root.dismiss()

        Label:
            id: lbl_result
            text: ""
            size_hint_y: None
            height: dp(20)
            markup: True

        ScrollView:
            do_scroll_x: True
            do_scroll_y: True
            GridLayout:
                id: results_grid
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: dp(24)
