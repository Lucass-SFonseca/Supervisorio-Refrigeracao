                        pos: self.pos
                        size: self.size
                rows: 5
                cols: 2
                TempPopLabel:
                    text: "Potencia Aparente (VA)"
                    bold: True
                BoxLayout:
                TempPopLabel:
                    text: "Enrolamento R"
                TempPopLabel:
                    id: potencia_aparente_r
                TempPopLabel:
                    text: "Enrolamento S"
                TempPopLabel:
                    id: potencia_aparente_s
                TempPopLabel:
                    text: "Enrolamento T"
                TempPopLabel:
                    id: potencia_aparente_t
