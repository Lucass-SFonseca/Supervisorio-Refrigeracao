<Atuacao>:
    title: "ATUAÇÃO DO CONTROLE DE TEMPERATURA"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            padding: 10
            spacing: 10

            # Faixa de título
            Label:
                text: "Controle dos Aquecedores"
                size_hint_y: None
                height: 40
                bold: True
                font_size: 20
                color: (1,1,1,1)
                canvas.before:
                    Color:
                        rgba: (0.1, 0.4, 0.7, 1)  # azul faixa
                    Rectangle:
                        size: self.size
                        pos: self.pos

            # Faixa com TextInputs lado a lado
            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: 50
                spacing: 20

                BoxLayout:
                    orientation: "vertical"
                    Label:
                        text: "Aquecedor 1"
                        size_hint_y: None
                        height: 20

                BoxLayout:
                    orientation: "vertical"
                    Label:
                        text: "Aquecedor 2"
                        size_hint_y: None
                        height: 20

            # Grid com os botões
            GridLayout:
                cols: 2
                rows: 2
                spacing: 10
                size_hint_y: None
                height: 100

                Button:
                    text: "Liga"
                    on_press: 
                        app.root.ids.aquecedor1.source = "imgs/aquecedor.jpg"
                        print("Aquecedor 1 ligado")

                Button:
                    text: "Liga"
                    on_press: 
                        app.root.ids.aquecedor2.source = "imgs/aquecedor.jpg"
                        print("Aquecedor 2 ligado")

                Button:
                    text: "Desliga"
                    on_press: 
                        app.root.ids.aquecedor1.source = "imgs/aquecedor_off.jpg"
                        print("Aquecedor 1 desligado")

                Button:
                    text: "Desliga"
                    on_press: 
                        app.root.ids.aquecedor2.source = "imgs/aquecedor_off.jpg"
                        print("Aquecedor 2 desligado")

        
        
<LabeledCheckBoxDataGraph>:
    orientation: 'horizontal'
    size_hint: (0.1, 1)
    CheckBox:
        id: checkbox
        on_active: app.root._graph.ids.graph.setMaxPoints(int(label.text), 0) if app.root is not None else None
    Label:
        id: label

<DataGraphPopup>:
    title: "Grafico de temperatura na Saida"
    BoxLayout:
        orientation: 'vertical'
        TimeSeriesGraph:
            id: graph
            xlabel: 'Horário'
            ylabel: 'Temperatura [°C]'
            background_color: 0.5, 0.5, 0.5, 0.5
            x_ticks_minor: 1
            x_ticks_major: 5
            y_ticks_major: 5
            y_grid_label: True
            x_grid_label: True
            padding: 5
            x_grid: True
            y_grid: True
            xmin: 0
            ymin: 0
            ymax: 50
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.05)
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (0.5, 1)
                Label:
                    size_hint: (0.3, 1)
                    text: "Número de pontos do gráfico"
                LabeledCheckBoxDataGraph:
                    id: mp20
                    on_kv_post:
                        self.ids.label.text = '20'
                        self.ids.checkbox.group = 'cb_group'
                        self.ids.checkbox.active = True
                LabeledCheckBoxDataGraph:
                    id: mp50
                    on_kv_post:
                        self.ids.label.text = '50'
                        self.ids.checkbox.group = 'cb_group'
                LabeledCheckBoxDataGraph:
                    id: mp100
                    on_kv_post:
                        self.ids.label.text = '100'
                        self.ids.checkbox.group = 'cb_group'
            Button:
                text: "Fechar"
                size_hint: (0.2, 1)
                on_release: root.dismiss()

<TempPopLabel@Label>:
    text: "-.-"
    halign: 'center'
    color: (0.1,0.1,0.1,1)
    font_size: 16

<LabeledCheckBoxHistGraph>:
    orientation: 'horizontal'
    size_hint: (0.05, 1)
    CheckBox:
        id: checkbox
        on_active: app.root.getDataDB()
    Label:
        id: label
        font_size: 12
        bold: True

<HistGraphPopup>:
    title: "Històrico de temperatura na Saida"
    BoxLayout:
        orientation: 'vertical'
        TimeSeriesGraph:
            id: graph
            xlabel: 'Horário'
            ylabel: 'Temperatura [°C]'
            background_color: 0.5, 0.5, 0.5, 0.5
            x_ticks_minor: 1
            x_ticks_major: 5
            y_ticks_major: 5
            y_grid_label: True
            x_grid_label: True
            padding: 5
            x_grid: True
            y_grid: True
            xmin: 0
            ymin: 0
            ymax: 50
        BoxLayout:
            id: sensores
            orientation: 'horizontal'
            size_hint: (1,0.1)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.1)
            Label:
                text: 'Timestamp inicial \r\n [size=12] (DD/MM/AAAA HH:MM:SS) [/size]'
                halign: 'center'
                markup: True
            TextInput:
                id: text_init_time
                size_hint: (1,0.8)
                halign: 'center'
                valign: 'middle'
                multiline: False
            Label:
                text: 'Timestamp final \r\n [size=12] (DD/MM/AAAA HH:MM:SS) [/size]'
                halign: 'center'
                markup: True
            TextInput:
                id: text_final_time
                size_hint: (1,0.8)
                halign: 'center'
                valign: 'middle'
                multiline: False
            Button:
                text: "Fechar"
                size_hint: (1,0.1)
                on_release: root.dismiss()

