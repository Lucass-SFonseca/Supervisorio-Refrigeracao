<LabeledCheckBoxDataGraph>:
    orientation: 'horizontal'
    size_hint: (0.1, 1)
    CheckBox:
        id: checkbox
        on_active: app.root._graph.ids.graph.setMaxPoints(int(label.text), 0) if app.root is not None else None
    Label:
        id: label

<LabeledChangeBoxDataGraph>:
    orientation: 'horizontal'
    size_hint: (0.2, 1)
    padding: [2, 0]
    spacing: 4
    
    CheckBox:
        id: checkbox
        size_hint_x: None
        width: 30
        on_active:
            (app.root.set_graph_variable(n_label.text, unidaderef.text) if app and app.root else None) if self.active else None
    
    Label:
        id: nick_label
        text: 'Carregando...'
        size_hint_x: 0.7
        color: 1, 1, 1, 1
        bold: True
        halign: 'left'
        valign: 'middle'
    
    Label:
        id: n_label
        text: ''
        size_hint_x: None
        width: 0
        opacity: 0
    
    Label:
        id: unidaderef
        text: ''
        size_hint_x: None
        width: 0
        opacity: 0

<DataGraphPopup>:
    title: "Selecione sua medida"
    on_open: root.update_nicknames()
    BoxLayout:
        orientation: 'vertical'
        TimeSeriesGraph:
            id: graph
            xlabel: 'Horário'
            ylabel: 'Temperatura [°C]'
            background_color: 0.5, 0.5, 0.5, 0.5
            x_ticks_minor: 1
            x_ticks_major: 5
            y_ticks_major: 5
            y_grid_label: True
            x_grid_label: True
            padding: 5
            x_grid: True
            y_grid: True
            xmin: 0
            ymin: 0
            ymax: 50
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.05)
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (0.5, 1)
                Label:
                    size_hint: (0.3, 1)
                    text: "Natureza da Medida"
                LabeledChangeBoxDataGraph:
                    id: calores
                    on_kv_post:
                        self.ids.n_label.text = 'Temperatura_saida'   # <--- corrigido
                        self.ids.checkbox.group = 'cb_group'
                        self.ids.checkbox.active = True
                        self.ids.unidaderef.text = "Temperatura [°C]"

                LabeledChangeBoxDataGraph:
                    id: pot
                    on_kv_post:
                        self.ids.n_label.text = 'potencia_ativa_total'   # <--- corrigido
                        self.ids.checkbox.group = 'cb_group'
                        self.ids.unidaderef.text = "Potência [kW]"

                LabeledChangeBoxDataGraph:
                    id: vel
                    on_kv_post:
                        self.ids.n_label.text = 'Velocidade_saida_ar'
                        self.ids.checkbox.group = 'cb_group'
                        self.ids.unidaderef.text = "Velocidade [m/s]"

                LabeledChangeBoxDataGraph:
                    id: crnt
                    on_kv_post:
                        self.ids.n_label.text = 'corrente_media'
                        self.ids.checkbox.group = 'cb_group'
                        self.ids.unidaderef.text = "Corrente [A]"


        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.1)
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (0.8, 1)
                Label:
                    size_hint: (0.4, 1)
                    text: "Número de pontos do gráfico"
                LabeledCheckBoxDataGraph:
                    id: mp20
                    on_kv_post:
                        self.ids.label.text = '20'
                        self.ids.checkbox.group = 'cb_group'
                        self.ids.checkbox.active = True
                LabeledCheckBoxDataGraph:
                    id: mp50
                    on_kv_post:
                        self.ids.label.text = '50'
                        self.ids.checkbox.group = 'cb_group'
                LabeledCheckBoxDataGraph:
                    id: mp100
                    on_kv_post:
                        self.ids.label.text = '100'
                        self.ids.checkbox.group = 'cb_group'
            Button:
                text: "Fechar"
                size_hint: (0.2, 1)
                on_release: root.dismiss()

<TempPopLabel@Label>:
    text: "-.-"
    halign: 'center'
    color: (0.1,0.1,0.1,1)
    font_size: 16

<LabeledCheckBoxHistTable>:
    size_hint_y: None
    height: dp(35)   # altura maior para dar espaçamento
    
    BoxLayout:
        orientation: "horizontal"
        spacing: dp(5)
        padding: dp(5)
        
        CheckBox:
            id: checkbox
            size_hint_x: None
            width: dp(30)
            active: False   # garante que pode ser marcado
       
        Label:
            id: label
            text: ""
            font_size: "16sp"
            color: (0,0,0,1)
            halign: "left"
            valign: "middle"
            text_size: self.size

<HistTablePopup>:
    title: "Histórico de Dados"
    size_hint: 0.95, 0.95
    BoxLayout:
        orientation: "horizontal"
        spacing: dp(10)
        padding: dp(10)

        # Coluna da esquerda -> Checkboxes
        ScrollView:
            size_hint_x: 0.3
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: sensores
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)

        # Coluna da direita -> filtros + tabela
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.7
            spacing: dp(5)

            BoxLayout:
                size_hint_y: None
                height: dp(40)
                spacing: dp(5)

                Label:
                    text: "Início:"
                    size_hint_x: None
                    width: dp(50)
                TextInput:
                    id: txt_init_time
                    hint_text: "dd/mm/yyyy HH:MM:SS"
                    multiline: False

                Label:
                    text: "Fim:"
                    size_hint_x: None
                    width: dp(40)
                TextInput:
                    id: txt_final_time
                    hint_text: "dd/mm/yyyy HH:MM:SS"
                    multiline: False

                Button:
                    text: "Buscar"
                    size_hint_x: None
                    width: dp(100)
                    on_release: app.root.getDataDB()

            Label:
                text: "Tabela de Resultados"
                bold: True
                size_hint_y: None
                height: dp(30)

            ScrollView:
                do_scroll_x: True
                do_scroll_y: True
                GridLayout:
                    id: data_table
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height

