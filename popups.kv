                    Rectangle:
                        pos: self.pos
                        size: self.size
                rows: 5
                cols: 2
                TempPopLabel:
                    text: "Corrente (A)"
                    bold: True
                BoxLayout:
                TempPopLabel:
                    text: "Enrolamento R"
                TempPopLabel:
                    id: corrente_R
                TempPopLabel:
                    text: "Enrolamento S"
                TempPopLabel:
                    id: corrente_S
                TempPopLabel:
                    text: "Enrolamento T"
                TempPopLabel:
                    id: corrente_T
                TempPopLabel:
                    text: "Média"
                TempPopLabel:
                    id: corrente_media

            GridLayout:
                canvas.before:
                    Color:
                        rgb: 0.9,0.9,0.9
                    Rectangle:
                        pos: self.pos
                        size: self.size
                rows: 5
                cols: 2
                TempPopLabel:
                    text: "Potencia Reativa (VAr)"
                    bold: True
                BoxLayout:
                TempPopLabel:
                    text: "Enrolamento R"
                TempPopLabel:
                    id: potencia_reativa_r
                TempPopLabel:
                    text: "Enrolamento S"
                TempPopLabel:
                    id: potencia_reativa_s
                TempPopLabel:
                    text: "Enrolamento T"
                TempPopLabel:
                    id: potencia_reativa_t
                TempPopLabel:
                    text: "Total"
