#:kivy 2.3.1

<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.2,0.2,0.2
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1,0.1)
        spacing: 20
        Label:
            text: "SUPERVISORIO REFRIGERAÇÃO v1.0"
            size_hint_x: None
            bold: True
            width: 350
            halign: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 380
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 140
            Button:
                text: "MODBUS"
                on_release: root._modbusPopup.open()
            Button:
                text: "Scan Time"
                on_release: root._scanPopup.open()
        Image:
            id: img_con
            size_hint_x: None
            width: 50
            halign: 'center'
            source: 'imgs/desconectado.png'

    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size
        Image:
            source: 'imgs/base_ig.png'
        Label:
            id: lb_temp
            size_hint: (None,None)
            size: (termometro.size[0]*0.25, termometro.size[1])
            pos_hint: {'x':0.81,'y':0.35}
            canvas:
                Color:
                    rgb: (0.678,0.847,0.902)
                Rectangle:
                    size: self.size
                    pos: (self.pos[0]+self.width*1.5, self.pos[1])
        Image:
            id: termometro
            source: 'imgs/termometro.png'
            size_hint: 0.17,0.17
            pos_hint: lb_temp.pos_hint

        Label:
            id: lb_vazao
            size_hint: (None,None)
            size: (vazao.size[0], vazao.size[1])
            pos_hint: {'x':0.81,'y':0.565}
            canvas:
                Color:
                    rgb: (0.678,0.847,0.902)
                Rectangle:
                    size: self.size
                    pos: self.pos
        Image:
            id: vazao
            source: 'imgs/saida_de_ar.png'
            size_hint: 0.23,0.23
            size_hint: (None,None)
            size: (180,170)
            pos_hint: lb_vazao.pos_hint

        Image:
            id: aquecedor1
            source: 'imgs/aquecedor_off.jpg'
            size_hint: 0.13,0.13
            pos_hint: {'x':0.485,'y':0.617}

        Image:
            id: aquecedor2
            source: 'imgs/aquecedor_off.jpg'
            size_hint: 0.13,0.13
            pos_hint: {'x':0.7,'y':0.617}

        Button:
            id: graficos
            size_hint: (None, None)
            size: (62,58)
            background_normal: 'imgs/graph_icon.jpg'
            background_down: 'imgs/graph_icon.jpg'
            pos_hint: {'x':0.02,'y':0.90}
            on_release:
                root._graph.open()
        Button:
            id: leituras
            size_hint: (None, None)
            size: (62,58)
            background_normal: 'imgs/icone_leitura.jpg'
            background_down: 'imgs/icone_leitura.jpg'
            pos_hint: {'x':0.02,'y':0.80}
            on_release:
                root._leitura.open()

        Button:
            id: ctrl_temp
            size_hint: (None, None)
            size: (62,58)
            background_normal: 'imgs/atuacao.jpg'
            background_down: 'imgs/atuacao.jpg'
            pos_hint: {'x':0.09,'y':0.90}
            on_release:
                root._atuacao.open()
            
        Button:
            id: bd
            size_hint: (None, None)
            size: (62,58)
            background_normal: 'imgs/icone_BD.jpg'
            background_down: 'imgs/icone_BD.jpg'
            pos_hint: {'x':0.09,'y':0.80}
            on_release:
                root.abrirHistorico()

        Button:
            id: botao_toggle
            size_hint: (None, None)
            size: (65,65)
            background_normal: 'imgs/icone_mot_off.jpg'
            background_down: 'imgs/icone_mot_off.jpg'
            pos_hint: {'x':0.068,'y':0.62}
            on_release: 
                root.alternaMotor()

        Button:
            id: btn_soft
            size_hint: (None, None)
            size: (40,40)
            background_normal: 'imgs/botao_soft.jpg'
            background_down: 'imgs/botao_soft.jpg'
            pos_hint: {'x':0.08,'y':0.55}
            on_release: 
                print('Modo de partida: Soft start')
                root.selecionarPartida(1)

        Button:
            id: btn_inversor
            size_hint: (None, None)
            size: (40,40)
            background_normal: 'imgs/botao_inv.jpg'
            background_down: 'imgs/botao_inv.jpg'
            pos_hint: {'x':0.125,'y':0.57}
            on_release: 
                print('Modo de partida: Inversor')
                root.selecionarPartida(2)

        Button:
            id: btn_direta
            size_hint: (None, None)
            size: (40,40)
            background_normal: 'imgs/botao_direta.jpg'
            background_down: 'imgs/botao_direta.jpg'
            pos_hint: {'x':0.035,'y':0.57}
            on_release: 
                print('Modo de partida: Direta')
                root.selecionarPartida(3)

        TextInput:
            id: ron_label
            text: "0"
            multiline: False
            input_filter: "int"
            size_hint: (None, None)
            height: 30
            width: 35
            pos_hint: {"x": 0.05, "y": 0.5}
            halign: "center"
            valign: "middle"
            text_size: self.size
            background_normal: ""     # remove a textura padrão
            background_active: ""     # idem para quando selecionado
            background_color: (1, 1, 1, 0)
            foreground_color: (0, 0, 0, 1)        # cor do texto
            cursor_color: (0, 0, 0, 1)            # cor do cursor
            on_text_validate:
                print("Definindo rampa de subida em: ", self.text)
                root.defineRampa(1, self.text)

        TextInput:
            id: roff_label
            text: "0"
            multiline: False
            input_filter: "int"
            size_hint: (None, None)
            height: 30
            width: 35
            pos_hint: {"x": 0.125, "y": 0.5}
            halign: "center"
            valign: "middle"
            text_size: self.size
            background_normal: ""     # remove a textura padrão
            background_active: ""     # idem para quando selecionado
            background_color: (1, 1, 1, 0)
            foreground_color: (0, 0, 0, 1)        # cor do texto
            cursor_color: (0, 0, 0, 1)            # cor do cursor
            on_text_validate:
                print("Definindo rampa de descida em: ", self.text) 
                root.defineRampa(2, self.text)

        Slider:
            id: my_slider
            min: 0
            max: 60
            step: 1
            value: 0
            orientation: "horizontal"
            size_hint: (0.145, None)
            height: 50
            pos_hint: {"x": 0.045, "y": 0.44}
            cursor_size: (20,20)
            value_track: True
            value_track_color: (0,0,0,1)
            on_value: 
                root.variaFrequenciaMotor(self.value)
                slider_label.text = str(int(self.value))

        TextInput:
            id: slider_label
            text: str(int(my_slider.value))
            multiline: False
            input_filter: "int"
            size_hint: (None, None)
            height: 30
            width: 35
            pos_hint: {"x": 0.02, "y": 0.455}
            halign: "center"
            valign: "middle"
            text_size: self.size
            background_normal: ""     # remove a textura padrão
            background_active: ""     # idem para quando selecionado
            background_color: (1, 1, 1, 1)
            foreground_color: (0, 0, 0, 1)        # cor do texto
            cursor_color: (0, 0, 0, 1)            # cor do cursor
            on_text_validate: 
                if self.text.isdigit(): my_slider.value = int(self.text)


        TempLabel:
            id: Temperatura
            text: '-.- °C'
            pos_hint: {'x':0.40,'y':-0.18}

        TempLabel:
            id: Velocidade_saida_ar
            font_size: 18
            pos_hint: {'x':0.343,'y': 0.377}

        TempLabel:
            id: Vazao_saida_ar
            font_size: 18
            pos_hint: {'x':0.413,'y': 0.377}

        TempLabel:
            id: pit01
            pos_hint: {'x':-0.18,'y':-0.03}

        TempLabel:
            id: pit02
            pos_hint: {'x':-0.07,'y':-0.03}

        TempLabel:
            id: pit03
            pos_hint: {'x':-0.21,'y':0.41}
        TempLabel:
            id: tit01
            pos_hint: {'x':0.01,'y':-0.09}
        TempLabel:
            id: tit02
            pos_hint: {'x':0.01,'y':-0.225}

<TempLabel@Label>:
    text: '-.-'
    font_size: 22
    bold: True
    halign: 'center'
    color: 0,0,0,1